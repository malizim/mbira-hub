// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id           String   @id
  name         String
  password     String
  instruments  String   // JSON array of instruments
  noteSequence String   // JSON array of notes
  created      DateTime @default(now())
  updated      DateTime @updatedAt
  takes        Take[]
}

model Take {
  id           Int      @id @default(autoincrement())
  sessionId    String
  file         String
  instrument   String
  user         String?
  parents      String   // JSON array of parent file names
  type         String   // "solo" or "mix"
  noteSequence String   // JSON array of notes for this take
  createdAt    DateTime @default(now())
  session      Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}
